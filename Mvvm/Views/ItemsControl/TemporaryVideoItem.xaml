<UserControl x:Class="NicoV4.Mvvm.Views.ItemsControl.TemporaryVideoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NicoV4.Mvvm.Views.ItemsControl"
             xmlns:converter="clr-namespace:NicoV4.Mvvm.Converters"
             mc:Ignorable="d" 
             x:Name="Root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0"
               Grid.Column="0"
               Grid.RowSpan="2"
               Source="{Binding Thumbnail}"
               HorizontalAlignment="Left"
               Width="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelWidth}" 
               Height="{Binding RelativeSource={RelativeSource Self}, Path=Source.PixelHeight}"/>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   TextTrimming="WordEllipsis"
                   Style="{StaticResource TextBlockL}"
                   Text="{Binding Title}"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Left" />

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   TextTrimming="WordEllipsis"
                   Foreground="DarkGray"
                   Text="{Binding Description}"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Left" />

        <Grid Grid.Row="2"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>

                <Style x:Key="TextBlockS" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Setter Property="Style" Value="{StaticResource TextBlockS}" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="TextAlignment" Value="Left" />
                </Style>

                <converter:Long2TimeSpanConverter x:Key="long2TimeSpan" />

            </Grid.Resources>

            <StackPanel Grid.Column="0"
                    Orientation="Horizontal">

                <TextBlock Text="{Binding LengthSeconds, Converter={StaticResource long2TimeSpan}, StringFormat={}{HHHH:mm:ss}}" />

                <TextBlock Text="再生：" />
                <TextBlock Text="{Binding ViewCounter, StringFormat={}{12:N}}" />

                <TextBlock Text="マイリスト：" />
                <TextBlock Text="{Binding MylistCounter, StringFormat={}{12:N}}" />

                <TextBlock Text="コメント：" />
                <TextBlock Text="{Binding CommentCounter, StringFormat={}{12:N}}" />


            </StackPanel>

            <TextBlock Grid.Column="1" 
                       Text="{Binding StartTime, StringFormat={}{yy/MM/dd HH:mm:ss}}" 
                       Foreground="DarkRed"/>

        </Grid>

    </Grid>
</UserControl>
